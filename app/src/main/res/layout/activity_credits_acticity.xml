<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreditsActicity"
    android:background="@color/dark_gray">

    <include layout="@layout/toolbar" android:id="@+id/toolbar"/>

  <androidx.cardview.widget.CardView
      android:id="@+id/app"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/toolbar"
      app:cardElevation="0dp"
      app:cardBackgroundColor="@android:color/transparent">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Aplicativo por Felipe Alafy"
          android:textColor="@color/white"
          android:textSize="15sp"
          />
  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:id="@+id/videos"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/app"
      app:cardElevation="2dp"
      app:cardBackgroundColor="@android:color/transparent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Videos:\nWendry Luciano\nKauan Simões\nYankee Monteiro"
        android:textColor="@color/white"
        android:textSize="15sp"
        />
  </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
      android:id="@+id/description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/videos"
      app:cardElevation="4dp"
      app:cardBackgroundColor="@android:color/transparent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrição dos videos:\nGustavo Anjos"
        android:textColor="@color/white"
        android:textSize="15sp"
        />
  </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
      android:id="@+id/presentation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/description"
      app:cardElevation="4dp"
      app:cardBackgroundColor="@android:color/transparent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apresentação:\nFelipe Alafy\nGustavo Anjos\nKauan Simões\nWendry Luciano\nYankee Monteiro"
        android:textColor="@color/white"
        android:textSize="15sp"
        />
  </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/presentation"
      app:cardElevation="4dp"
      app:cardBackgroundColor="@android:color/transparent">
    <TextView
        android:id="@+id/links"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ended_description"
        android:textColor="@color/white"
        android:textSize="15sp"
        />
  </androidx.cardview.widget.CardView>

</RelativeLayout>